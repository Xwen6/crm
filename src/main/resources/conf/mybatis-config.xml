<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--settings：控制mybatis全局行为-->
    <settings>
        <!--设置mybatis输出日志-->
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>
   
    <typeAliases>
        <package name="wyu.xwen.settings.domain"/>
        <package name="wyu.xwen.workbench.domain"/>
    </typeAliases>

    <!-- sql mapper(sql映射文件)的位置-->
    <mappers>
        <mapper resource="mapper/settings/UserDao.xml"/>
        <mapper resource="mapper/workbench/ActivityDao.xml"/>
        <mapper resource="mapper/workbench/ContactsDao.xml"/>
        <mapper resource="mapper/settings/DicTypeDao.xml"/>
        <mapper resource="mapper/settings/DicValueDao.xml"/>
        <mapper resource="mapper/workbench/VisitDao.xml"/>
        <mapper resource="mapper/workbench/ActivityRemarkDao.xml"/>
        <mapper resource="mapper/workbench/ClueDao.xml"/>
        <mapper resource="mapper/workbench/ContactsActivityRelationDao.xml"/>
        <mapper resource="mapper/workbench/ContactsRemarkDao.xml"/>
        <mapper resource="mapper/workbench/CustomerDao.xml"/>
        <mapper resource="mapper/workbench/CustomerRemarkDao.xml"/>
        <mapper resource="mapper/workbench/TranDao.xml"/>
        <mapper resource="mapper/workbench/TranHistoryDao.xml"/>
        <mapper resource="mapper/workbench/ClueRemarkDao.xml"/>
        <mapper resource="mapper/workbench/ClueActivityRelationDao.xml"/>
        <mapper resource="mapper/workbench/VisitRemarkDao.xml"/>
        <mapper resource="mapper/workbench/TranRemarkDao.xml"/>


    </mappers>
</configuration>
